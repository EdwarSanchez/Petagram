<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvFavoritas"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="7dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMascota"
            android:layout_width="@dimen/tamano_mascota"
            android:layout_height="@dimen/tamano_mascota"
            android:layout_gravity="center_horizontal"

            android:src="@drawable/mascota1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.73"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="60dp"
                    android:layout_toEndOf="@+id/ibHueso"
                    android:layout_toRightOf="@+id/ibHueso"
                    android:text="@string/nombre"
                    android:textSize="@dimen/tamano_letra"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="186dp"
                android:layout_height="match_parent"


                >

                <TextView
                    android:id="@+id/tvCantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="60dp"
                    android:layout_toLeftOf="@+id/ivHueso"
                    android:layout_toStartOf="@+id/ivHueso"
                    android:text="@string/cantidad"
                    android:textSize="@dimen/tamano_letra"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivHueso"
                    android:layout_width="@dimen/tamano_hueso"
                    android:layout_height="@dimen/tamano_hueso"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/hueso2" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>